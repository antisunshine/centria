#include <iostream>

int main() {

  // Write a for loop here:
  for (int i = 99; i >= 0; i--)
  {
    std::cout << i << " bottles of beer on the wall.\n" << i << " bottles of beer!\n" << "Take one down and pass it around.\n" << i << " bottles of beer on the wall.\n" << std::endl;
  }
  std::cout << "No bottles of beer on the wall.\nNo more bottles of beer!\nTake a chair and smash on your head.\nNo more bottles of beer on the wall.\n" << std::endl;
}
